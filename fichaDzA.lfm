<?xml version="1.0" encoding="UTF-8"?>

<form formType="sheetTemplate" dataType="DATA_TYPE_AQUI" 
    title="Dementes e Árduos" name="DzA">

    <import file="style.xml"/>
    <import file="script.xml"/>

    <tabControl g="col" g-width="12" height="500">
        <tab title="Ficha">
            <import file="./partitions/testsFisicos.xml"/>            
            <import file="./partitions/infos_desvantagens.xml"/>            
            <import file="./partitions/capacidades_movApri.xml"/>            
            <import file="./partitions/pericias.xml"/>
        </tab>

        <tab title="Magias" g="col" g-width="12">     
            <button left="20" top="20" height="25" text="Nova Magia" cursor="handPoint" width="80" onClick="self.rclMagias:append();"/>
            <layout left="20" top="48" height="25" width="1280" margins="{top=12}">
                <label align="left" text="Usos" width="40" margins="{right=5}"/>
                <label align="left" text="Total" width="40" margins="{right=5}"/>
                <label align="left" text="Tipo" width="80" margins="{right=5}"/>
                <label align="left" text="Nome" width="160" margins="{right=5}"/>
                <label align="left" text="Descrição" width="600" margins="{right=5}"/>
                <label align="left" text="Alcance" width="80" margins="{right=5}"/>
                <label align="left" text="Duração" width="80"/>
            </layout>
            <recordList name="rclMagias" field="magias" templateForm="frmMagiasList" left="20" top="72" width="1280" autoHeight="true"/>
        </tab>

        <tab title="Coisas">
            <button left="20" top="20" height="25" text="Novo Item" cursor="handPoint" width="80" onClick="self.rclItens:append();"/>
            <layout left="20" top="48" height="25" width="1280" margins="{top=12}">
                <label align="left" text="Nome" width="160" margins="{right=5}"/>
                <label align="left" text="Tipo" width="100" margins="{right=5}"/>
                <label align="left" text="Qtd." width="40" margins="{right=5}"/>
                <label align="left" text="Peso" width="40" margins="{right=5}"/>
                <label align="left" text="Descrição" width="600" margins="{right=5}"/>
                <label align="left" text="Dur.Atual" width="60" margins="{right=5}"/>
                <label align="left" text="Dur.Total" width="60"/>
            </layout>
            <recordList name="rclItens" field="itens" templateForm="frmItensGerais" left="20" top="72" width="1280" autoHeight="true"/>
        </tab>

        <tab title="Treinamentos">
            <layout left="20" top="0" height="500" width="1280">
                <layout left="20" top="48" height="25" width="1280">
                    <label align="left" text="Treino Principal" width="160" margins="{right=5}"/>
                    <label align="left" text="Treino Secundário" width="160" margins="{right=5}"/>
                    <label align="left" text="Int" width="40" margins="{right=5}"/>
                    <label align="left" text="Sab" width="40" margins="{right=5}"/>
                    <label align="left" text="Descrição do treinamento" width="600" margins="{right=5}"/>
                    <label align="left" text="Tempo h." width="60" margins="{right=5}"/>
                </layout>
                <layout left="20" top="78" height="25" width="1280">
                    <edit align="left" horzTextAlign="center" field="principalTreino1" width="160" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="secundarioTreino1" width="160" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="intTreino1" width="40" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="sabTreino1" width="40" height="25" margins="{right=5}"/>
                    <edit align="left" field="descTreino1" width="600" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="tempoTreino1" width="60" height="25" margins="{right=5}"/>
                </layout>
                <layout left="20" top="108" height="25" width="1280">
                    <edit align="left" horzTextAlign="center" field="principalTreino2" width="160" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="secundarioTreino2" width="160" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="intTreino2" width="40" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="sabTreino2" width="40" height="25" margins="{right=5}"/>
                    <edit align="left" field="descTreino2" width="600" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="tempoTreino2" width="60" height="25" margins="{right=5}"/>
                </layout>
                <layout left="20" top="138" height="25" width="1280">
                    <edit align="left" horzTextAlign="center" field="principalTreino3" width="160" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="secundarioTreino3" width="160" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="intTreino3" width="40" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="sabTreino3" width="40" height="25" margins="{right=5}"/>
                    <edit align="left" field="descTreino3" width="600" height="25" margins="{right=5}"/>
                    <edit align="left" horzTextAlign="center" field="tempoTreino3" width="60" height="25" margins="{right=5}"/>
                </layout>
            </layout>
        </tab>

        <tab title="Conhecimentos">
            <richEdit align="client" backgroundColor="white" defaultFontColor="black" field="conhecimentos"/>
        </tab>

        <tab title="Lore">
            <richEdit align="client" backgroundColor="white" defaultFontColor="black" field="lore"/>
        </tab>
    </tabControl>
</form>
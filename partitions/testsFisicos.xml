    <layout left="20" top="20" height="25" g="block" class="layoutTest">
        <label align="left" text="Resis" width="40" hitTest="true" hint="Resiliência do seu personagem"/>
        <edit align="left" horzTextAlign="center" field="resistencia" class="testField" onChange="atualizarMaxLoad(sheet.resistencia, sheet.destreza, sheet.forca, sheet.maxLoad)"/>   
